<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <classPathEntry
    location="C:\zjf\soft\apache-maven-3.3.9\repo\mysql\mysql-connector-java\5.1.44\mysql-connector-java-5.1.44.jar" />

  <context id="MySQLTable" targetRuntime="MyBatis3">
    <commentGenerator>
      <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
      <property name="suppressAllComments" value="true" />
    </commentGenerator>

    <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
      connectionURL="jdbc:mysql://localhost:3306/webapp" userId="root"
      password="123456">
    </jdbcConnection>

    <!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer，为 true时把JDBC DECIMAL 
      和 NUMERIC 类型解析为java.math.BigDecimal -->
    <javaTypeResolver>
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

    <javaModelGenerator targetPackage="test.model"
      targetProject="C:\zjf\code\eclipse_oxygen_test\webapp\src\main\java">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="test.xml"
      targetProject="C:\zjf\code\eclipse_oxygen_test\webapp\src\main\java">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER"
      targetPackage="test.dao" targetProject="C:\zjf\code\eclipse_oxygen_test\webapp\src\main\java">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

    <table tableName="blog"></table>

  </context>
</generatorConfiguration>